<?php

/**
 * @file
 * Contains multibanners.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function multibanners_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.multibanners':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Layout-configurable multibanner blocks composed of banner entities.') . '</p>';
      return $output;
    default:
  }
}

/**
 * Implements hook_preprocess_block().
 */
function multibanners_preprocess_block(&$variables) {
  if ($variables['elements']['#plugin_id'] === 'views_block:multibanners-banner_block') {
    $variables['#attached']['library'][] = 'multibanners/banner';
  }
  if ($variables['elements']['#plugin_id'] === 'views_block:multibanners-flexgrid_block') {
    $variables['#attached']['library'][] = 'multibanners/flexgrid';
  }
  if ($variables['elements']['#plugin_id'] === 'views_block:multibanners-video_block') {
    $variables['#attached']['library'][] = 'multibanners/video';
  }
}

/**
 * Implements hook_theme().
 */
function multibanners_theme() {
  return array(
    'banner' => array(
      'file' => 'multibanners.theme.inc',
      'render element' => 'elements',
      'template' => 'banner',
    ),
    'views_view_multibanner' => array(
      'file' => 'multibanners.theme.inc',
      'render element' => 'elements',
      'template' => 'views_view_multibanner',
    ),
  );
}

/**
 * Implements hook_preprocess_views_view().
 */
function multibanners_preprocess_views_view(&$variables) {
  // $id = $variables['id'];
  // $plugin_id = $variables['plugin_id'];
  if ($variables['id'] === 'multibanners') {
    $view = $variables['view'];
    $banner_count_class = count($view->result);
    $variables['attributes']['class'][] = 'banner-count-'. $banner_count_class;
  }
}

/**
 * Implements hook_field_widget_form_alter().
 */
function multibanners_field_widget_form_alter(&$element, \Drupal\Core\Form\FormStateInterface $form_state, $context) {
  if (array_key_exists('entities', $element)) {
    if ($element['entities']['#entity_type'] === 'banner') {
      // Banner entities are stored in numeric keys, alongside other associative keys
      $i = 0;
      foreach  ($element['entities'] as $key => $value) {
        if (is_numeric($key))
          $i++;
      }
      // Hide add buttons when limit of 9 is reached.
      if ($i >= 9) {
        $element['actions']['ief_add']['#access'] = FALSE;
        $element['actions']['ief_add_existing']['#access'] = FALSE;
      }
    }
  }
}
