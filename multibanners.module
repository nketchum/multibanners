<?php

/**
 * @file
 * Contains multibanners.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function multibanners_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.multibanners':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Customizable and client-configurable banner content type entity and associated fields.') . '</p>';
      return $output;
    default:
  }
}

/**
 * Implements hook_theme().
 */
function multibanners_theme() {
  return array(
    'banner' => array(
      'file' => 'banner.page.inc',
      'render element' => 'elements',
      'template' => 'banner',
    ),
    'field__banner__name' => array(
      'base hook' => 'field',
    ),
    'field__banner__field_banner_image' => array(
      'base hook' => 'field',
    ),
  );
}
